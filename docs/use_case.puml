@startuml
left to right direction
actor User as user

rectangle "Telegram Reminder Bot" {
  usecase "Добавить пару" as add_class
  usecase "Удалить пару" as delete_class
  usecase "Посмотреть расписание" as view_schedule
  usecase "Отметить посещение" as mark_attendance
  
  usecase "Добавить задачу" as add_task
  usecase "Удалить задачу" as delete_task
  usecase "Отметить выполненной" as mark_done
  usecase "Посмотреть задачи" as view_tasks
  
  usecase "Добавить событие" as add_event
  usecase "Удалить событие" as delete_event
  usecase "Сделать периодическим" as make_periodic
  usecase "Посмотреть события" as view_events
  
  usecase "Получить напоминание" as get_reminder
}

user --> add_class
user --> delete_class
user --> view_schedule
user --> mark_attendance
user --> add_task
user --> delete_task
user --> mark_done
user --> view_tasks
user --> add_event
user --> delete_event
user --> make_periodic
user --> view_events
user --> get_reminder

@enduml